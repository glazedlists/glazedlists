		<and>
			<os name="Linux"/>
			<not>
				<contains string="${os.arch}" substring="64"/>
			</not>
		</and>
	</condition>

	<condition property="swt.jar.file" value="org.eclipse.swt.gtk.linux.x86_64.jar">
		<and>
			<os name="Linux"/>
			<contains string="${os.arch}" substring="64"/>
		</and>
	</condition>
	
